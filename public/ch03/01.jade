doctype html
html(ng-app='maintenance')
  head
    title Dive Sites
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet',href='01.css')
  body(ng-controller='adminCtrl')
    // Navigation header
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        button.navbar-toggle.collapsed(
          type='button'
          data-toggle='collapse'
          data-target='#adminMenu'
        )
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#',ng-click='showMain()') Younderwater Admin
        #adminMenu.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ng-class="{active: isActive('Locations')}")
              a(href='#',ng-click='showLocations()') Locations
            li(ng-class="{active: isActive('Sites')}")
              a(href='#',ng-click='showDiveSites()') Dive Sites

    // Optional view header
    .current-spot
      .container-fluid
        .container
          div(ng-show="view=='locations'")
            h3 Manage the list of diving locations
          div(ng-show="view=='diveSites'")
            h3 Manage the list of dive sites

    // View content
    .main-content
      .container-fluid
        .container
          div(ng-show="view=='main'")
            p Main content
          div(ng-show="view=='locations'")
            p Locations content
          div(ng-show="view=='diveSites'")
            p Dive sites content
    script(src='/jquery-2.1.4.js')
    script(src='/bootstrap/js/bootstrap.js')
    script(src='/angular/angular.js')
    script(src='01.js')
