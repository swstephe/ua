doctype html
html(ng-app='diveLog')
  head
    title Dive Log
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body
    .container-fluid(ng-controller='diveLogCtrl')
      h1 My Latest Dives
      .row
        .col-sm-4.col-sm-offset-8
          input.form-control.input-lg(
            type='number'
            placeholder="Limit to items"
            ng-model='limitValue'
          )
      .row
        .col-sm-4(ng-repeat="dive in dives | limitTo: limitValue")
          h3 {{dive.site}}
          h3 {{dive.location}}
          h3 {{dive.depth}} feet | {{dive.time}} min
    script(src='/angular/angular.js')
    script(src='dives.js')
    script
      :coffee-script
        angular.module 'diveLog', []
        .controller 'diveLogCtrl', ($scope) ->
          $scope.limitValue = 100
          $scope.dives = dives
