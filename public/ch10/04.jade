doctype html
html(ng-app='diveLog')
  head
    title Dive Log
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body
    .container-fluid
      h1 My Latest Dives
      .row(ng-controller='diveLogCtrl')
        .col-sm-4(ng-repeat='dive in dives')
          h3 {{dive.site}}
          h4 {{dive.location}}
          h2 {{dive.depth}} feet | {{dive.time}} min
          h4(ng-show='$index % 2 == 0') {{dive.divedOn | date: 'short'}}
          h4(ng-show='$index % 2 == 1') {{dive.divedOn | date: 'MMMM dd, yyyy'}}
    script(src='/angular/angular.js')
    script(src="dives.js")
    script
      :coffee-script
        angular.module 'diveLog', []
        .controller 'diveLogCtrl', ($scope) ->
          $scope.dives = dives
