doctype html
html(ng-app='diveLog')
  head
    title Dive Log (ng-controller)
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body
    .container-fluid
      h1 My Latest Dives (ng-controller)
      .row
        .col-sm-4.col-sm-offset-8
          input.form-control.input-lg(
            placeholder="Search"
            ng-model='searchKey'
          )
      .row(ng-controller='diveLogCtrl')
        .col-sm-4(ng-repeat='dive in dives | filter:searchKey')
          h3 {{dive.site}}
          h4 {{dive.location}}
          h2 {{dive.depth}} feet | {{dive.time}} min
    script(src='/angular/angular.js')
    script(src='dives.js')
    script
      :coffee-script
        angular.module 'diveLog', []
        .controller 'diveLogCtrl', ($scope) -> $scope.dives = dives
