doctype html
html(ng-app='maintenance')
  head
    title Dive Sites
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
    link(rel='stylesheet',href='site.css')
  body(ng-controller='adminCtrl')
    // Navigation header
    nav.navbar.navbar-default.navbar-fixed-top(role='navigation')
      .container
        button.navbar-toggle.collapsed(
          type='button'
          data-toggle='collapse'
          data-target='#adminMenu'
        )
          span.sr-only Toggle navigation
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.navbar-brand(href='#/main') Younderwater Admin
        #adminMenu.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(ng-class="{active: isActive('Locations')}")
              a(href='#/locations') Locations
            li(ng-class="{active: isActive('Sites')}")
              a(href='#/sites') Dive Sites

    // Optional title bar
    yw-current-spot

    // View content
    .main-content
      .container-fluid
        .container
          div(ng-view)

    script(src='/jquery-2.1.4.js')
    script(src='/bootstrap/js/bootstrap.js')
    script(src='/angular/angular.js')
    script(src='/angular-route/angular-route.js')
    script(src='maintenance.js')
