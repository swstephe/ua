doctype html
html(ng-app='scopes')
  head
    title Scope Hierarchy
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
    style.
      .ng-scope {
        border: 1px solid blue;
        border-left: 8px solid blue;
        margin: 4px 12px;
        padding: 4px;
      }
  body
    .container-fluid
      h1(ng-init='name="Younderwater"') Application: {{name}}
      div(ng-controller='locationCtrl')
        h3 Location: {{name}}
        div(ng-controller='siteCtrl')
          h4 Dive Site: {{name}}
          div(ng-controller='buddiesCtrl')
            h5 Buddies:
            h5(ng-repeat='name in buddies')
              strong {{$index+1}}. {{name}}
    script(src='/angular/angular.js')
    script
      :coffee-script
        angular.module 'scopes', []
        .controller 'locationCtrl', ($scope) ->
          $scope.name = "Sharm El Sheikh, Egypt"
        .controller 'siteCtrl', ($scope) ->
          $scope.name = "Shark-Yolanda Reef"
        .controller 'buddiesCtrl', ($scope) ->
          $scope.buddies = [
            "Neil Cod"
            "Anne Lionfish"
            "Jack Travely"
          ]
