doctype html
html(ng-app='yw.interesting')
  head
    title Interesting Dives
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body(ng-controller='interestingCtrl')
    .container-fluid
      h1 Interesting dives
      .row
        .col-sm-4
          select.form-control(
              ng-model='selectedLoc'
              ng-options='loc for loc in locations'
          )
      .row(style={'margin-top':'24px'})
        .col-sm-6
          .alert.alert-info(ng-show='selectedLoc==locations[0]')
            | The most colorful flora and fauna, ever!
          .alert.alert-warning(ng-show='selectedLoc==locations[1]')
            | Beautiful terraform underwater...
          .alert.alert-danger(ng-show='selectedLoc==locations[2]')
            | Very strong changes in the current during a single dive
          .alert.alert-success(ng-show='selectedLoc==locations[3]')
            | The best cave diving experience...
    script(src='/angular/angular.js')
    script
      :coffee-script
        angular.module 'yw.interesting', []
        .controller 'interestingCtrl', ($scope) ->
          $scope.locations = [
            "Egypt"
            "Cyprus"
            "Cuba"
            "Hungary"
          ]
          $scope.selectedLoc = $scope.locations[0]
