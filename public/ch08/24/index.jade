extends ../layout
block style
  link(rel='stylesheet' href='site.css')
block content
  form(name='simple',novalidate)
    .form-group
      label.control-label A valid domain name
      input.form-control(
          autofocus
          type='domainName'
          ng-model='domainName'
          domain
      )
append script
  script(type='text/javascript' src='validation.module.js')
  script(type='text/javascript' src='domain.directive.js')
