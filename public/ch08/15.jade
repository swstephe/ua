doctype html
html(ng-app)
  head
    title Form Submit
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body(style={'margin-top': '12px'})
    .container(ng-init="answer=''")
      form(name='simple',ng-submit='answer=userName')
        .form-group
          label.control-label User name
          input.form-control(
              autofocus
              name='userName'
              ng-model='userName'
              required
          )
      hr
      p
        | The submitted user name is:&nbsp;
        strong {{answer}}
    script(src='/angular/angular.js')
