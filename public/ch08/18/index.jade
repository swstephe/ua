doctype html
html(ng-app)
  head
    title Form Errors
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body(style={'margin-top': '12px'})
    .container
      form(name='simple',novalidate)
        .form-group
          label.control-label User name
          input.form-control(
              autofocus
              name='userName'
              ng-model='userName'
              required
          )
        .form-group
          label.control-label Email
          input.form-control(
              name='email'
              ng-model='email'
              type='email'
              required
          )
      hr
      h4 "Required" errors:
      p(ng-repeat='issue in simple.$error.required') {{issue.$name}}
      h4 "Email" errors:
      p(ng-repeat='issue in simple.$error.email') {{issue.$name}}
    script(src='/angular/angular.js')
