form(name='simple',novalidate)
  .form-group
    label.control-label Original "empty"
    input.form-control(
        autofocus
        name='empty1'
        ng-model='empty1'
        required
    )
  .form-group
    label.control-label Modified "Empty"
    input.form-control(
        name='empty2'
        ng-model='empty2'
        my-empty
        required
    )
  input.btn.btn-primary(
      type='submit'
      ng-disabled='simple.$invalid'
      value="Save"
  )
