doctype html
html(ng-app)
  head
    title Title input
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body(style={'margin-top': '12px'})
    .container(ng-init='changeCount=0')
      label.control-label Type in a value
      input.form-control(
        ng-model='myValue'
        ng-change='changeCount=changeCount+1'
        ng-trim='true'
      )
      hr
      table.table.table-bordered
        tbody
          tr
            td Value:
            td [{{myValue}}]
          tr
            td Changes:
            td {{changeCount}}
    script(src='/angular/angular.js')
