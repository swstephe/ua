doctype html
html(ng-app)
  head
    title Text input
    link(rel='stylesheet',href='/bootstrap/css/bootstrap.css')
  body(style={'margin-top': '12px'})
    .container(ng-init='changeCount=0')
      form(name='regform')
        .form-group
          label.control-label Type in a value
          input.form-control(
            name='userName'
            ng-model='userName'
            required
          )
        .form-group
          label.control-label Email
          input.form-control(
            type='email'
            name='email'
            ng-model='email'
            required
          )
      hr
      table.table.table-bordered
        tbody
          tr
            td Is user name dirty?
            td {{regform.userName.$dirty}}
          tr
            td Is email dirty?
            td {{regform.email.$dirty}}
          tr
            td Is user name valid?
            td {{regform.userName.$valid}}
          tr
            td Is email valid?
            td {{regform.email.$valid}}
          tr
            td Is the form dirty?
            td {{regform.$dirty}}
          tr
            td Is the form valid?
            td {{regform.$valid}}
    script(src='/angular/angular.js')
